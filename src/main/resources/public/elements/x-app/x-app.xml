<dom-module id="x-app">
    <template>
        <style is="custom-style">
            /*<![CDATA[*/            
           
                :host {
                    display: block;
                }
                                
                .self-end {
                    /* This mixin (from iron-flex-layout) aligns the tabs to the
                       bottom of the toolbar. */
                    @apply(--layout-self-end);
                }
                
                code {
                    white-space: pre;
                    word-break: normal;
                    word-wrap: normal; /* also 'initial' is available */
                }
 
            /*]]>*/
        </style>
        <iron-ajax id="ironAjax"></iron-ajax>

        <paper-drawer-panel
            id="paperDrawerPanel"
            responsive-width="900px">

            <paper-scroll-header-panel
                id="mainLhsMenuPanel"
                class="nav"
                drawer="drawer">
                <div class="horizontal-section">
                    <paper-menu
                        id="mainAppMenu"
                        attr-for-item-title="label"></paper-menu>
                </div>
            </paper-scroll-header-panel>

            <!-- this tag has the styling that makes scrollbar exist -->
            <paper-header-panel
                class="main"
                main="main"
                mode="waterfall">

                <paper-toolbar
                    id="mainToolbar"
                    class="medium-tall">
                    <!-- when implemented this button will toggle visibility 
                        of left-side menu -->
                    <paper-icon-button
                        icon="menu"
                        paper-drawer-toggle="paper-drawer-toggle"></paper-icon-button>
                    <span
                        class="title"
                        onClick="nav.navPublicHome();"
                        id="headerAppName">m64</span>
                    <paper-icon-button
                        icon="icons:home"
                        id="navHomeButton"
                        onClick="nav.navHome();">Home</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:change-history"
                        id="upLevelButton"
                        onClick="nav.navUpLevel();">Parent</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="editor:mode-edit"
                        id="editModeButton"
                        onClick="edit.editMode();">Edit</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:search"
                        id="searchMainAppButton"
                        onClick="(new SearchContentDlg()).open();">Search</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:schedule"
                        id="timelineMainAppButton"
                        onClick="srch.timelineByModTime();">Timeline</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:settings"
                        id="userPreferencesMainAppButton"
                        onClick="(new PrefsDlg()).open();">Preferences</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:account-box"
                        id="openLoginDlgButton"
                        onClick="(new LoginDlg()).open();">Login</paper-icon-button>
                    <paper-icon-button
                        style="display:none;"
                        icon="icons:account-box"
                        id="navLogoutButton"
                        onClick="user.logout(true);">Logout</paper-icon-button>
                    <paper-button
                        style="display:none;"
                        id="openSignupPgButton"
                        onClick="user.openSignupPg();">Signup</paper-button>

                    <paper-tabs
                        id="mainPaperTabs"
                        attr-for-selected="name"
                        selected="{{selected}}"
                        class="bottom self-end"
                        style="width: 300px;">
                        <paper-tab name="mainTabName">Main</paper-tab>
                        <paper-tab name="searchTabName">Search</paper-tab>
                        <paper-tab name="timelineTabName">Timeline</paper-tab>
                    </paper-tabs>
                </paper-toolbar>

                <!-- Main Content -->
                <div class="content">
                    <!-- Main App Tab Panel -->
                    <iron-pages
                        id="mainIronPages"
                        attr-for-selected="name"
                        selected="{{selected}}">
                        <div name="mainTabName">
                            <!-- the reason we have tabindex here is so we can call jquery focus() and have the user able to use
                            arrow key scrolling immediately without first having to click on the page 
                            -->
                            <div id="mainNodeContent" tabindex="-1"></div>
                            <div id="listView"></div>
                        </div>
                        <div
                            name="searchTabName"
                            id="searchResultsPanel">No search displaying.</div>
                        <div
                            name="timelineTabName"
                            id="timelineResultsPanel">No timeline displaying.</div>
                    </iron-pages>

                    <!-- All modal dialogs go in here -->
                    <div
                        id="modalsContainer"
                        style="position: absolute; top: 0; left: 0"></div>
                </div>
            </paper-header-panel>
        </paper-drawer-panel>
        <div
            id="modalsContainer"
            style="position: absolute; top: 0; left: 0"></div>
    </template>
    <script>
        /*<![CDATA[*/
            (function() { 
            	 'use strict'; 
            	 Polymer({ 
                    is : 'x-app',
                    properties : {
                        selected : {
                            type : String,
                            value : 'mainTabName'
                        }
                    },
                    ready : function() {
                        console.log("polymer ready.");
                    } 
                }); 
            })();
        /*]]>*/
    </script>
