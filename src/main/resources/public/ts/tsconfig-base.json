{
    "compilerOptions": {
        "target": "es5",
        "lib" : ["es2015", "dom", "ScriptHost"],
        "module": "system",
        "moduleResolution": "node",
        //TSX files are an ugly disaster that should have neve been invented.
        //"jsx": "React",
        "isolatedModules": false,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "inlineSources" : true,
        "noEmitOnError": true,
        "watch" : true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true
    },
      "include": [
      "*.ts",
      "./**/*ts",
      //TSX files are an ugly disaster that should have neve been invented.
      //"*.tsx",
      //"./**/*tsx",
      "./node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
       
    ],
    "compileOnSave": true,
    "buildOnSave": true,
    "atom": {
        "rewriteTsconfig": false,
        "formatOnSave" : false
    }
}
